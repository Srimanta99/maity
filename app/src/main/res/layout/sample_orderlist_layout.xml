<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_5sdp"

        android:orientation="vertical"
        android:background="@drawable/white_capsual_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/blue_half_redious"
            >

            <TextView
                android:id="@+id/tv_order_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HouseHold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/rajdhanibold"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_8sdp"
                >


            </TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_alignParentRight="true"

                >
                <ImageView
                    android:id="@+id/img_order_delete"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/deleteimg"
                    android:scaleType="fitXY"

                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center|right"
                    >
                </ImageView>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/tick"
                        android:layout_gravity="center"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order note : "
                        android:fontFamily="@font/rajdhanibold"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_order_note"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deep Cleaning"
                        android:fontFamily="@font/rajdhanimedium"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/tick"
                        android:layout_gravity="center"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid by : "
                        android:fontFamily="@font/rajdhanibold"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_paid"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1100 sqft."
                        android:fontFamily="@font/rajdhanimedium"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/tick"
                        android:layout_gravity="center"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : "
                        android:fontFamily="@font/rajdhanibold"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rewarded"
                        android:fontFamily="@font/rajdhanimedium"
                        android:textColor="@color/text_color_light_blak">

                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 "
                    android:textSize="@dimen/_30sdp"
                    android:gravity="center"
                    android:fontFamily="@font/rajdhanibold">


                </TextView>

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="JAN "
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rajdhanibold">


                </TextView>
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2021"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rajdhanibold">


                </TextView>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/view_color_nav"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp">

        </View>

        <TextView
            android:id="@+id/tv_tamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount : Rs. 520/-"
            android:fontFamily="@font/rajdhanibold"
            android:textColor="@color/text_color_light_blak"
            android:textSize="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp">

        </TextView>

    </LinearLayout>


</LinearLayout>