        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp">


             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/PAYMENTDETAILS"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:textSize="@dimen/_14sdp"
                 android:textColor="@color/text_color_dark_blue"
                 android:fontFamily="@font/rajdhanimedium">

             </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Service"
                        android:textColor="@color/text_color_light_blak"
                        android:fontFamily="@font/rajdhanimedium">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_service_charge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="@color/text_color_light_blak"
                        android:fontFamily="@font/rajdhanimedium">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18% GST"
                        android:textColor="@color/text_color_light_blak"
                        android:fontFamily="@font/rajdhanimedium">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_GST"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="@color/text_color_light_blak"
                        android:fontFamily="@font/rajdhanimedium">

                    </TextView>
                </LinearLayout>

                <View
